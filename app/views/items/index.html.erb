<p style="color: green"><%= notice %></p>

<h1>Items</h1>

<div id="items">
  <% @items.each do |item| %>
    <%= render item %>
    <tr>
      <td> <%= link_to "Show", item %> </td>
      <td> <%= link_to "Edit", edit_item_path(item)%> </td>
      <td> <%= link_to "Destroy", item, method: :delete, data: 
        { confirm: 'Are you sure?' } %> </td>
    </tr>
  <% end %>
</div>

<%= link_to "New item", new_item_path %>
